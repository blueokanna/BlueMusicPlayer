<!-- QrLoginWindow.xaml -->
<winui:Window x:Class="BlueMusicPlayer.Views.QrLoginWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:winui="using:Microsoft.UI.Xaml"
>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="网易云音乐登录" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,32"/>
        <!-- QR Code Container -->
        <Border Grid.Row="1" 
                Background="{ThemeResource LayerFillColorDefaultBrush}" 
                CornerRadius="12" 
                Padding="32" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                >
            <Grid Width="200" Height="200">
                <!-- QR Code Image -->
                <Image x:ConnectionId='4' x:Name="QrImage" 
                       Width="240" 
                       Height="240" 
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="Collapsed"/>
                <!-- Loading indicator -->
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                    <ProgressRing x:ConnectionId='5' x:Name="LoadingRing" 
                                  Width="60" 
                                  Height="60" 
                                  HorizontalAlignment="Center"
                                  IsActive="False"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- Status and Instructions -->
        <StackPanel Grid.Row="2" 
                   Orientation="Vertical"
                   HorizontalAlignment="Center" 
                   Margin="0,24,0,24"
                   MaxWidth="350">
            <!-- Status text -->
            <TextBlock x:ConnectionId='3' x:Name="StatusText" 
                       Text="正在生成二维码..." 
                       HorizontalAlignment="Center" 
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,16"/>
            <!-- Instructions -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <TextBlock Text="使用网易云音乐手机客户端扫描二维码登录" 
                           HorizontalAlignment="Center" 
                           FontSize="14"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextAlignment="Center"
                           Margin="0,0,0,12"/>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Spacing="4">
                    <TextBlock Text="1. 打开网易云音乐手机客户端" 
                               FontSize="12"
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                    <TextBlock Text="2. 点击右上角扫码按钮" 
                               FontSize="12"
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                    <TextBlock Text="3. 扫描上方二维码完成登录" 
                               FontSize="12"
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <!-- Cancel Button -->
        <Button x:ConnectionId='2' Grid.Row="3" 
                x:Name="CancelButton" 
                Content="取消" 
                HorizontalAlignment="Center" 
                MinWidth="120"
                Height="40"
                                          
                Style="{ThemeResource AccentButtonStyle}"/>
    </Grid>
</winui:Window>

